#include <iostream>
#include <ctime>
using namespace std;
void checkValidInput(int n) {
    if (n < 4)
        throw true;
    else 
        throw false;
}
void main()
{
    setlocale(LC_ALL, "ru");
    cout << "Играть в игру 'угадай число'? - 1; Решать уравнение - 0" << endl;
    int r;
    cin >> r;
    if (r == 1) {
        srand(time(0));
        int ran;
        cout << "Случайное число 0 - ? " << endl;
        cin >> ran;
        int gas = rand() % ran;
        int num = -1;
        cout << "Угадайте число 0 - " << ran << endl;
        for (; num != gas; ) {
            cin >> num;
            if (num > gas)
                cout << "Число меньше" << endl;
            if (num < gas)
                cout << "Число больше" << endl;
        }
        cout << "Вы угадали! Правильное число " << gas;
        return;
    }
    if (r == 0) {
        int a, b, h, x = 1, z, n;
        double y = 0;
        cout << "Введите n >= 4, n = ";
        cin >> n;
        if (n < 4) {
            cout << "ERROR";
            return;
        }
        else {
            cout << "Введите a = ";
            cin >> a;
            cout << "Введите b = ";
            cin >> b;
            cout << "Введите шаг h = ";
            cin >> h;
            for (int j = h; b >= j; j += h) {
                z = a;
                cout << "x" << x << " = " << z;
                a += h;
                for (int i = 2; i <= n - 2; i++)
                    y += (z - i) * (z - i);
                cout << " y" << x << " = " << y << endl;
                x++;
            }
        }
    }
    else {
        cout << "Функция не найдена";
    }
}
